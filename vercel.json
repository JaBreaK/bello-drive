{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/upload(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/files(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/download(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/auth(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/admin(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/status",
      "destination": "/src/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}