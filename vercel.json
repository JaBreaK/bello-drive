{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/upload(.*)", "dest": "/api/index.js" },
    { "src": "/files(.*)", "dest": "/api/index.js" },
    { "src": "/download/(.*)", "dest": "/api/index.js" },
    { "src": "/auth(.*)", "dest": "/api/index.js" },
    { "src": "/admin(.*)", "dest": "/api/index.js" },
    { "src": "/status", "dest": "/api/index.js" },
    { "src": "/assets/(.*)", "dest": "/client/dist/assets/$1" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2))", "dest": "/client/dist/$1" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}